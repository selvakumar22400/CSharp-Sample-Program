using System;
using System.Collections.Generic;
using System.Text;

namespace basic_program
{
    class menu_driven
    {
        public void menu_driven_calc()
        {

            int opt ;

            do
            {
                
                Console.Write("entered the fristnumber ");
                int num1 = int.Parse(Console.ReadLine());
                Console.Write("entered the secondnumber");
                int num2 = int.Parse(Console.ReadLine());
                Console.Write("1.    addition.\n2.    subtraction\n3.    multipliction\n4.    divistion\n5.    exit\nselect the any number");
                opt = int.Parse(Console.ReadLine());
                switch (opt)
                {
                    case 1:
                        Console.WriteLine(num1 + num2);
                        break;
                    case 2:
                        Console.WriteLine(num1 - num2);
                        break;
                    case 3:
                        Console.WriteLine(num1 * num2);
                        break;
                    case 4:
                        Console.WriteLine(num1 / num2);
                        break;
                    case 5:
                        break;


                } 



            } while (opt <= 5);
        }

    }
}

