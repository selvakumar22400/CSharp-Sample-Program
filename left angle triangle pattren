using System;

namespace convert
{
    class Program
    {
        static void Main(string[] args)
        {
            int number = Convert.ToInt32(Console.ReadLine());//6
            for (int i = 1; i <= number; i++)
            {
                for (int j = 1; j <= 2 * i - 1; j++)
                
                    Console.Write("*");
                    Console.WriteLine();
                
            }
        }
    }
}
      
